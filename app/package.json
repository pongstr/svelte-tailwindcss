{
  "name": "@codecrumble/app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "yarn clean && rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --port 9000 --no-clear",
    "clean": "rm -rf ./public/app/main",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint --fix \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "postinstall": "echo \"Copy pre-built monaco-editor...\" && ls -ls ../node_modules/monaco-editor/min/vs && cp -fR ../node_modules/monaco-editor/min/vs ./public/app/vs"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-flow": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@rollup/plugin-alias": "^3.1.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@tsconfig/svelte": "^2.0.0",
    "@types/bytes": "^3.1.1",
    "@types/pouchdb": "^6.4.0",
    "@typescript-eslint/parser": "^5.6.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-svelte3": "^3.2.1",
    "postcss": "^8.4.14",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "rollup": "^2.6.2",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.45.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.10.6",
    "tailwindcss": "^3.0.24",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@monaco-editor/loader": "^1.2.0",
    "@popperjs/core": "^2.11.5",
    "@rgossiaux/svelte-headlessui": "^1.0.2",
    "bytes": "^3.1.1",
    "dayjs": "^1.10.7",
    "fuzzysort": "^1.1.4",
    "hotkeys-js": "^3.8.7",
    "monaco-editor": "^0.31.0",
    "pouchdb": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "short-uuid": "^4.2.0",
    "sirv-cli": "^2.0.0",
    "svelte-spa-router": "^3.2.0",
    "svelte-hero-icons": "^4.1.3",
    "svelte-popperjs": "^1.2.10"
  }
}
